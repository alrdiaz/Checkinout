<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.administrador.detalle.DetalleActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/RegistrosUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="15dp"
        android:text="@string/menu_registros"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/lvRegistrosUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RegistrosUsuario"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnExportar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_cloud_download_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"/>

</RelativeLayout>